{
  "name": "@tenstack/db",
  "type": "module",
  "version": "0.0.1",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint \"src/**/*.ts\"",
    "build": "pnpm exec tsc",
    "build:watch": "pnpm exec tsc --watch",
    "dev": "pnpm exec tsc --watch --preserveWatchOutput",
    "test-db": "pnpm run build && node --input-type=module -e \"import('./dist/index.js').then(({ testConnection }) => testConnection()).then(ok => { process.exit(ok ? 0 : 1); });\""
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "drizzle-orm": "^0.42.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.32",
    "drizzle-kit": "^0.31.0",
    "@types/pg": "^8.11.13",
    "pg": "^8.14.1",
    "eslint": "^8.44.0"
  }
} 